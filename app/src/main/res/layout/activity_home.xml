<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_reading"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="30dp"
                android:src="@drawable/click_to_read"
                 />

            <ImageView
                android:src="@drawable/bookmarks"
                android:id="@+id/btn_bookmark"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Boomarks"
                android:textSize="25dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_developers"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:text="About Developer"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:cornerRadius="20dp" />

            <ImageView
                android:id="@+id/btn_5satr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Rate 5 Star"
                android:src="@drawable/rate5star"
                 />

            <ImageView
                android:id="@+id/more_apps"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/more_apps" />

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/share_app"
                 />

        </LinearLayout>
    </ScrollView>


</LinearLayout>